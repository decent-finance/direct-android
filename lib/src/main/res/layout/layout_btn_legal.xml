<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="data"
                type="com.cexdirect.lib.network.models.RuleData"/>

        <variable
                name="listener"
                type="com.cexdirect.lib.views.LegalClickListener"/>
    </data>

    <TextView
            style="@style/Direct.SecondaryButton"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:onClick="@{() -> listener.onClicked(data)}"
            android:text="@{data.formattedName()}"
            tools:text="Terms of Use"/>
</layout>
