<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cexd_verification_nav_graph"
    app:startDestination="@id/identityFragment">

    <fragment
        android:id="@+id/identityFragment"
        android:name="com.cexdirect.lib.verification.identity.IdentityFragment"
        android:label="IdentityFragment">
        <action
            android:id="@+id/action_identityFragment_to_paymentConfirmationFragment"
            app:destination="@id/paymentConfirmationFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentConfirmationFragment"
        android:name="com.cexdirect.lib.verification.confirmation.PaymentConfirmationFragment"
        android:label="PaymentConfirmationFragment">
        <action
            android:id="@+id/action_paymentConfirmationFragment_to_receiptFragment"
            app:destination="@id/receiptFragment" />
    </fragment>
    <fragment
        android:id="@+id/receiptFragment"
        android:name="com.cexdirect.lib.verification.receipt.ReceiptFragment"
        android:label="ReceiptFragment" />
</navigation>
